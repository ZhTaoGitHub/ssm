<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <!--开启mybatis的日志-->
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>

    <!--给实体类起别名,与*.xml映射文件中的resultType值对应,简化类的名字-->
    <typeAliases>
        <package name="com.bj169.pojo"/>
    </typeAliases>

    <!--要映射的实体类的xml配置文件-->
    <mappers>
        <package name="com.bj169.dao"/>
    </mappers>

</configuration>